<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#636363">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backrect"
        android:layout_centerHorizontal="true"
        android:id="@+id/backrect"
        android:layout_marginTop="60dp"/>

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/backrect"
        android:id="@+id/userRankTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:text="Your Rank: "
        android:textSize="20sp"/>

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/userRankTextView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/userLevelTextView"
        android:text="Your Level: "
        android:textSize="20sp"/>

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/userLevelTextView"
        android:id="@+id/highestLevelTextView"
        android:text="Highest Level Reached: "
        android:textSize="20sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/highestLevelTextView"
        android:layout_marginTop="95dp"
        android:text="@string/play"
        android:layout_centerHorizontal= "true"
        android:id="@+id/playDashboard"
        android:background="@drawable/butcir"
        android:textColor="#FFFFFF"
        android:textSize="19sp"/>

</RelativeLayout>